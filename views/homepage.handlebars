{{#each posts as |post|}}

<div class="row">
    <div class="container postArea">
        <h2><a href="/post/{{post.id}}">{{post.title}}</a></h2>
    </div>
</div>

<div class="col-4">
    <p>Created by: {{post.user.username}}
    on
    {{format_date post.date_created}}
    </p>
</div>

<div class="postdescription">
    <p>
        {{post.description}}
    </p>
</div>
{{/each}}